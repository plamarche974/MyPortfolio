@model MediaData.Work

@{
    ViewBag.Title = "Ajouter un Média";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Create", "Works", FormMethod.Post))
{
    @Html.AntiForgeryToken()

        <div class="form-group">
        @Html.LabelFor(model => model.Title)
        @Html.EditorFor(model => model.Title)
        @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="form-group">
        @Html.LabelFor(model => model.ReleaseDate)
        @Html.EditorFor(model => model.ReleaseDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
        @Html.ValidationMessageFor(model => model.ReleaseDate)
        </div>

        <div class="form-group">
        @Html.LabelFor(model => model.Genre)
        @Html.EditorFor(model => model.Genre)
        @Html.ValidationMessageFor(model => model.Genre)
        </div>

        <div class="form-group">
        @Html.LabelFor(model => model.Description)
        @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", rows = 5 } })
        @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="form-group">
        @Html.LabelFor(model => model.ImageURL)
        @Html.EditorFor(model => model.ImageURL)
        @Html.ValidationMessageFor(model => model.ImageURL)
        </div>

        <button type="submit" class="btn btn-primary">Ajouter</button>
}
